<%- layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h1><%=post.title%></h1>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= post.image.url%>"
      class="card-img-top show-img"
      alt="listingimage"
    /><br />
    <div class="card-body">
      <p class="card-text">
        <%=post.description%> <br />
        &#x20b9; <%=post.price.toLocaleString("en-IN")%> <br />
        <%=post.location%> <br />
        <%=post.country%> <br />
      </p>
    </div>
  </div>
  <br />
</div>
<div class="btns">
  <a href="/listing/<%=post._id %>/edit" class="btn btn-dark offset-3 edit-btn"
    >Edit</a
  ><br />

  <form method="post" action="/listing/<%=post.id%>?_method=Delete">
    <button class="btn btn-dark offset-5 add-btn" type="submit">Delete</button>
  </form>
</div>

<div class="col-8 offset-3">
  <hr />
  <h4>Leave a review</h4>
  <form
    action="/listing/<%=post.id%>/review"
    method="post"
    novalidate
    class="needs-validation"
  >
    <div class="mt-3">
      <label class="form-label" for="rating">Rating:</label>
      <input
        type="range"
        class="form-range"
        name="review[rating]"
        min="1"
        max="5"
        id="rating"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="comment"></label>
      <textarea
        class="form-control"
        id="comment"
        name="review[comment]"
        rows="5"
        cols="30"
        placeholder="Leave a review here"
        required
      ></textarea>
      <div class="invalid-feedback">Enter comment</div>
      <br />
      <button class="btn btn-outline-dark" type="submit">Add Review</button>
    </div>
  </form>

  <hr />
  <p><b>ALL REVIEWS</b></p>
  <div class="row">
  <% for(review of post.reviews){ %>
  <div class="review-card col-5">
    <div class="card-body">
      <h5 class="card-title">John Doe</h5>
      <p class="card-text"><%= review.comment %></p>
      <p class="card-text"><%= review.rating %> ‚≠ê</p>
      <form action="/listing/<%=post.id%>/review/<%= review._id %>?_method=DELETE" method="post" class="pb-1">
        <button type="submit" class="btn btn-sm btn-dark">DELETE</button>
      </form>
    </div>
  </div>
  <% } %>
  </div>
</div>
