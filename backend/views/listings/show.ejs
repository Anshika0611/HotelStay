<%- layout('/layouts/boilerplate') %>
<script>
    // @ts-nocheck
  let mapToken = "<%= process.env.MAP_TOKEN%>";
  const listing= JSON.parse('<%- JSON.stringify(post)%>'); //json.parse is added only bc this(JSON.stringify(post.geography.coordinates) isnt real js so VSC was showing err even though the code was working
</script>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h1><%=post.title%></h1>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= post.image.url%>"
      class="card-img-top show-img"
      alt="listingimage"
    /><br />
    <div class="card-body">
      <p class="card-text">
        <b>Owned By: <i> <%= post.owner.username %></i></b
        ><br />
        <%=post.description%> <br />
        &#x20b9; <%=post.price.toLocaleString("en-IN")%> <br />
        <%=post.location%> <br />
        <%=post.country%> <br />
      </p>
    </div>
  </div>
  <br />
</div>
<% if(currUser && currUser._id.equals(post.owner._id)){ %>
<div class="btns">
  <a href="/listing/<%=post._id %>/edit" class="btn btn-dark offset-3 edit-btn"
    >Edit</a
  >
  <br />
  <form method="post" action="/listing/<%=post.id%>?_method=Delete">
    <button class="btn btn-dark offset-5 add-btn" type="submit">Delete</button>
  </form>
</div>
<% } %>

<div class="col-8 offset-3">
  <% if(currUser){ %>
  <hr />
  <h4>Leave a review</h4>
  <form
    action="/listing/<%=post.id%>/review"
    method="post"
    novalidate
    class="needs-validation"
  >
    <label for="rating" class="form-label">Rating:</label>
    <fieldset class="starability-coinFlip">
      <input
        type="radio"
        id="no-rate"
        class="input-no-rate"
        name="review[rating]"
        value="1"
        checked
        aria-label="No rating."
      />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    <div class="mb-3">
      <label class="form-label" for="comment"></label>
      <textarea
        class="form-control"
        id="comment"
        name="review[comment]"
        rows="5"
        cols="30"
        placeholder="Leave a review here"
        required
      ></textarea>
      <div class="invalid-feedback">Enter comment</div>
      <br />
      <button class="btn btn-outline-dark" type="submit">Add Review</button>
    </div>
    <hr />
  </form>
  <% } %> <% if(post.reviews.length>0){ %>
  <p><b>ALL REVIEWS</b></p>
  <div class="row">
    <% for(review of post.reviews){ %>
    <div class="review-card col-5">
      <div class="card-body">
        <h5 class="card-title">@<%=review.author.username%></h5>
        <p class="card-text"><%= review.comment %></p>
        <p
          class="starability-result card-text"
          data-rating="<%= review.rating %>"
        >
          Rated: 3 stars
        </p>
        <form
          action="/listing/<%=post.id%>/review/<%= review._id %>?_method=DELETE"
          method="post"
          class="pb-1"
        >
          <button type="submit" class="btn btn-sm btn-dark">DELETE</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>
</div>

<div class="col-6 offset-3 mb-3">
  <h3>Where You'll Be</h3>
  <div id="map"></div>
</div>
<script src="/js/map.js"></script>
